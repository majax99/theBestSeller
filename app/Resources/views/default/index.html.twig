{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row" >
            {% for product in products %}
            <div class="col-md-4 ">
                <div class="thumbnail ">
                    {% for image in product.images %}
                        <img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.name }}" class="img-responsive">
                    {% endfor %}
                    <div class="caption">
                        <h4 class="pull-right">${{ product.minimumPrice }}</h4>
                        <h4><a href="#">{{ product.title }}</a></h4>
                        <p>{{ product.description }}</p>
                    </div>
                    <div class="space-ten"></div>
                    <div class="btn-ground text-center">
                        <a href="{{ path('product_show', {'id': product.id}) }}"><button type="button" class="btn btn-primary" >more details</button></a>
                    </div>
                    <div class="space-ten"></div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
