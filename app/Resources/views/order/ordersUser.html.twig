{% extends 'base.html.twig' %}

{% block body %}



    <div class="container" id="homepage">
        <div class = "row" style = "margin-top:50px;">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">My orders </h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="table-responsive">
                                <table id="tableProno" class="table table-condensed">
                                    {% if orders[0] is defined %}
                                    <thead>
                                    <th style="width:5%;"></th>
                                    <th class= "text-center"  >Title </th>
                                    <th class= "text-center" > price </th>
                                    <th class= "text-center" > order date </th>
                                    <th class= "text-center" > seller  </th>

                                    </thead>
                                    <tbody>

                                    {% for order in orders %}
                                    <tr>

                                        <td class = "text-center" style="vertical-align:middle;"> {{ order.product.title }}</td>
                                        <td class = "text-center" style="vertical-align:middle;">$ {{ order.price }}</td>
                                        <td class = "text-center" style="vertical-align:middle;"> {{ order.created | date('d/m/Y H:i') }}</td>
                                        <td class = "text-center" style="vertical-align:middle;"> {{ order.buyer.username }}</td>
                                        {% endfor %}
                                    </tr>
                                    {% else %}
                                        <h2 class = "text-center"> You don't buy any products </h2>
                                    {% endif %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}